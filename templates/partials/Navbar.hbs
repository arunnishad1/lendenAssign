<script>
  function getCookie(name) {
  // Get all cookies in a string
  const cookieArr = document.cookie.split(';');
  
  // Loop through all cookies and find the one with the specified name
  for (let i = 0; i < cookieArr.length; i++) {
    let cookie = cookieArr[i].trim();
    // If the cookie starts with the specified name followed by '='
    if (cookie.startsWith(name + '=')) {
      return cookie.substring(name.length + 1);  // Return the value of the cookie
    }
  }
  
  return null;  // Return null if the cookie is not found
}

// Example usage
const userEmail = getCookie('userEmail');
const username = getCookie('userName');

// Decode the userEmail if needed (for URL encoding like %40)
const decodedEmail = userEmail ? decodeURIComponent(userEmail) : null;
  // Should log: "aman"
  document.getElementById('username').textContent = username;
  document.getElementById('userEmail').textContent = decodedEmail;

  </script>

